{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "noreels",
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo.png"
  },
  "permissions": ["scripting"],
  "host_permissions": ["https://www.instagram.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
